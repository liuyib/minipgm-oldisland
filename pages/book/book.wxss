/* pages/book/book.wxss */
.books-header {
  position: fixed;
  top: 0;
  background-color: #ffffff;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
}

.search-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  height: 34px;
  width: 700rpx;
  color: #999999;
}

.search-image {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

.sub-container {
  background-color: #f5f5f5;
  margin-top: 100rpx;
  padding: 20rpx 0;
}

.books-hot {
  display: block;
  width: 106rpx;
  height: 34rpx;
  margin: 0 auto;
  padding: 10rpx 0;
}

.books-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.books-item {
  width: 50%;
  margin: 20rpx 0;
}
