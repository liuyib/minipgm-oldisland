/* components/book/index.wxss */
.book-container {
  display: flex;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
  border-radius: 3rpx;
  box-shadow: 2px 2px 3px 1px #e3e3e3;
}

.book-cover {
  width: 100%;
  height: 100%;
}

.ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.book-desc {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 5rpx 10rpx 10rpx 15rpx;
  font-size: 24rpx;
  background-color: #ffffff;
}

.book-title {
  margin: 5rpx 0;
}

.book-author {
  margin: 0 0 7rpx 0;
  font-size: 20rpx;
  color: #999999;
}

.book-footer {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 20rpx;
}

.book-like {
  color: #666666;
}